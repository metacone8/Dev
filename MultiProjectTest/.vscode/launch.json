{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Project1",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/Project1",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/MinGW/bin/gdb.exe",  // 윈도우면 "gdb.exe" 경로
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}